# vim: ft=muttrc

color date yellow default
color graph-commit magenta default
color diff-index cyan default
color diff-stat cyan default

# http://qiita.com/yaotti/items/62947b0c981ae38fae82
bind main G !@hub browse -- commit/%(commit)
bind diff G !@hub browse -- commit/%(commit)
bind blame G !@hub browse -- commit/%(commit)

# http://qiita.com/yoshikazusawa/items/d99e8b5d6f6a45aa6e2e
set main-view = id date author commit-title:graph=yes,refs=yes
